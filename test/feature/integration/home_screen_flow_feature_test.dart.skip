import 'package:flutter/material.dart';
import 'package:flutter_test/flutter_test.dart';
import 'package:provider/provider.dart';

import 'package:cardmind/screens/home_screen.dart';
import 'package:cardmind/providers/card_provider.dart';
import 'package:cardmind/services/card_service.dart';
import 'package:cardmind/models/sync_status.dart';
import 'package:cardmind/bridge/models/card.dart' as bridge;

/// Mock CardService for testing
class MockCardService extends CardService {
  final List<bridge.Card> _mockCards = [];
  bool _initialized = false;

  @override
  Future<void> initialize(String storagePath) async {
    _initialized = true;
  }

  @override
  Future<List<bridge.Card>> getActiveCards() async {
    if (!_initialized) {
      throw Exception('CardService not initialized');
    }
    return List.from(_mockCards);
  }

  @override
  Future<bridge.Card> createCard(String title, String content) async {
    if (!_initialized) {
      throw Exception('CardService not initialized');
    }
    final card = bridge.Card(
      id: 'test-${_mockCards.length + 1}',
      title: title,
      content: content,
      tags: [],
      createdAt: DateTime.now().millisecondsSinceEpoch,
      updatedAt: DateTime.now().millisecondsSinceEpoch,
      deleted: false,
    );
    _mockCards.add(card);
    return card;
  }

  @override
  Future<void> updateCard(
    String id, {
    String? title,
    String? content,
    List<String>? tags,
  }) async {
    if (!_initialized) {
      throw Exception('CardService not initialized');
    }
    final index = _mockCards.indexWhere((c) => c.id == id);
    if (index == -1) {
      throw Exception('Card not found: $id');
    }
    final oldCard = _mockCards[index];
    _mockCards[index] = bridge.Card(
      id: oldCard.id,
      title: title ?? oldCard.title,
      content: content ?? oldCard.content,
      tags: tags ?? oldCard.tags,
      createdAt: oldCard.createdAt,
      updatedAt: DateTime.now().millisecondsSinceEpoch,
      deleted: oldCard.deleted,
    );
  }

  @override
  Future<void> deleteCard(String id) async {
    if (!_initialized) {
      throw Exception('CardService not initialized');
    }
    final index = _mockCards.indexWhere((c) => c.id == id);
    if (index == -1) {
      throw Exception('Card not found: $id');
    }
    _mockCards.removeAt(index);
  }
}

void main() {
  group('HomeScreen Integration Tests - Note CRUD Flow', () {
    late MockCardService mockCardService;
    late CardProvider cardProvider;

    setUp(() {
      mockCardService = MockCardService();
      cardProvider = CardProvider(cardService: mockCardService);
    });

    Widget createTestWidget() {
      return MaterialApp(
        home: ChangeNotifierProvider<CardProvider>.value(
          value: cardProvider,
          child: HomeScreen(
            syncStatusStream: Stream.value(SyncStatus.disconnected()),
          ),
        ),
      );
    }

    testWidgets('it_should_should create a new note', (WidgetTester tester) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // Verify empty state
      expect(find.text('还没有笔记'), findsOneWidget);

      // Find and tap the create button (FAB or desktop button)
      // Use .first to handle multiple Add icons (FAB + desktop button)
      final createButton = find.byIcon(Icons.add).first;
      await tester.tap(createButton);
      await tester.pumpAndSettle();

      // Verify card was created
      expect(cardProvider.cards.length, 1);
      expect(cardProvider.cards.first.title, '');
      expect(cardProvider.cards.first.content, '');
    });

    testWidgets('it_should_should display created notes', (WidgetTester tester) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      // Create some test cards
      await cardProvider.createCard('Test Note 1', 'Content 1');
      await cardProvider.createCard('Test Note 2', 'Content 2');

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // Verify notes are displayed
      expect(find.text('Test Note 1'), findsOneWidget);
      expect(find.text('Test Note 2'), findsOneWidget);
      expect(cardProvider.cards.length, 2);
    });

    testWidgets('it_should_should update a note', (WidgetTester tester) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      // Create a test card
      final card = await cardProvider.createCard(
        'Original Title',
        'Original Content',
      );

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // Update the card
      await cardProvider.updateCard(
        card!.id,
        title: 'Updated Title',
        content: 'Updated Content',
      );
      await tester.pumpAndSettle();

      // Verify card was updated
      expect(cardProvider.cards.length, 1);
      expect(cardProvider.cards.first.title, 'Updated Title');
      expect(cardProvider.cards.first.content, 'Updated Content');
    });

    testWidgets('it_should_should delete a note', (WidgetTester tester) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      // Create a test card
      final card = await cardProvider.createCard('Test Note', 'Test Content');

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // Verify card exists
      expect(cardProvider.cards.length, 1);
      expect(find.text('Test Note'), findsOneWidget);

      // Delete the card
      await cardProvider.deleteCard(card!.id);
      await tester.pumpAndSettle();

      // Verify card was deleted
      expect(cardProvider.cards.length, 0);
      expect(find.text('Test Note'), findsNothing);
      expect(find.text('还没有笔记'), findsOneWidget);
    });

    testWidgets('it_should_should handle complete CRUD cycle', (
      WidgetTester tester,
    ) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // 1. Create
      await cardProvider.createCard('Note 1', 'Content 1');
      await tester.pumpAndSettle();
      expect(cardProvider.cards.length, 1);

      // 2. Read
      expect(find.text('Note 1'), findsOneWidget);

      // 3. Update
      await cardProvider.updateCard(
        cardProvider.cards.first.id,
        title: 'Updated Note 1',
      );
      await tester.pumpAndSettle();
      expect(find.text('Updated Note 1'), findsOneWidget);
      expect(find.text('Note 1'), findsNothing);

      // 4. Delete
      await cardProvider.deleteCard(cardProvider.cards.first.id);
      await tester.pumpAndSettle();
      expect(cardProvider.cards.length, 0);
      expect(find.text('还没有笔记'), findsOneWidget);
    });

    testWidgets('it_should_should handle multiple notes CRUD', (
      WidgetTester tester,
    ) async {
      // Initialize provider
      await cardProvider.initialize('/test/path');

      await tester.pumpWidget(createTestWidget());
      await tester.pumpAndSettle();

      // Create multiple notes
      await cardProvider.createCard('Note 1', 'Content 1');
      await cardProvider.createCard('Note 2', 'Content 2');
      await cardProvider.createCard('Note 3', 'Content 3');
      await tester.pumpAndSettle();

      expect(cardProvider.cards.length, 3);

      // Update one note
      await cardProvider.updateCard(
        cardProvider.cards[1].id,
        title: 'Updated Note 2',
      );
      await tester.pumpAndSettle();

      expect(find.text('Updated Note 2'), findsOneWidget);
      expect(cardProvider.cards.length, 3);

      // Delete one note
      await cardProvider.deleteCard(cardProvider.cards[0].id);
      await tester.pumpAndSettle();

      expect(cardProvider.cards.length, 2);
      expect(find.text('Note 1'), findsNothing);
      expect(find.text('Updated Note 2'), findsOneWidget);
      expect(find.text('Note 3'), findsOneWidget);
    });
  });
}
