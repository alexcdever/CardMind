{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "../dist-electron",
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@cardmind/core/*": ["../../core/dist/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../../core" }]
}
