{
  "name": "@cardmind/desktop",
  "version": "1.0.0",
  "description": "A desktop app for managing memory cards",
  "private": true,
  "main": "./dist-electron/main/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently -k \"vite\" \"pnpm wait-dev\"",
    "build": "cross-env NODE_ENV=production pnpm build:electron && pnpm build:react",
    "build:electron": "pnpm --filter @cardmind/core build && tsc -p electron/tsconfig.json --noEmitOnError false",
    "build:react": "vite build",
    "wait-dev": "pnpm build:electron && wait-on tcp:3000 && electron .",
    "electron-dev": "pnpm build:electron && pnpm wait-dev",
    "clean": "rimraf dist dist-electron node_modules",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cardmind/core": "workspace:*",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ant-design/icons": "^5.5.1",
    "@uiw/react-md-editor": "^4.0.4",
    "antd": "^5.21.6",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.6",
    "vite-plugin-html": "^3.2.2",
    "zustand": "^4.5.5",
    "@mui/material": "^5.14.18"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "@babel/core": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.9.4",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "wait-on": "^7.2.0"
  }
}
